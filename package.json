{
    "name": "nuxt-app",
    "private": true,
    "scripts": {
        "cz": "czg",
        "build": "nuxt build --dotenv .env.production",
        "test": "nuxt build --dotenv .env.test",
        "dev": "nuxt dev --dotenv .env.development -p 3300",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "prepare": "husky install",
        "lint:js": "eslint --ext \".js,.ts,.jsx,.tsx,.vue\" .",
        "lint:style": "stylelint \"**/*.{css,scss,sass,html,vue,less,postcss,pcss}\"",
        "lint:prettier": "prettier --check .",
        "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
        "lintfix": "prettier --write --list-different . && yarn lint:js --fix && yarn lint:style --fix",
        "lint:lint-staged": "lint-staged"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.7",
        "@commitlint/config-conventional": "^17.6.7",
        "@element-plus/nuxt": "^1.0.5",
        "@nuxt/devtools": "^0.7.1",
        "@nuxtjs/color-mode": "^3.2.0",
        "@nuxtjs/eslint-config-typescript": "^12.0.0",
        "@nuxtjs/eslint-module": "^4.1.0",
        "@nuxtjs/i18n": "^8.0.0-beta.13",
        "@nuxtjs/stylelint-module": "^5.1.0",
        "@nuxtjs/tailwindcss": "^6.7.2",
        "@pinia-plugin-persistedstate/nuxt": "^1.1.1",
        "@types/node": "^18",
        "@types/qs": "^6.9.7",
        "commitizen": "^4.3.0",
        "czg": "^1.7.0",
        "eslint": "^8.45.0",
        "eslint-plugin-vue": "^9.16.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.3",
        "nuxt": "^3.6.5",
        "nuxt-icons": "^3.2.1",
        "postcss-color-gray": "5.0.0",
        "postcss-html": "^1.5.0",
        "prettier": "^3.0.0",
        "sass": "^1.65.1",
        "stylelint": "^15.10.2",
        "stylelint-config-standard-vue": "^1.0.0",
        "stylelint-order": "^6.0.3",
        "typescript": "^5.1.6",
        "wrap-ansi": "8.0.1"
    },
    "keywords": [
        "tailwindcss",
        "nuxtjs",
        "nuxt"
    ],
    "dependencies": {
        "@metamask/detect-provider": "^2.0.0",
        "@pinia/nuxt": "^0.4.11",
        "element-plus": "^2.3.8",
        "pinia": "^2.1.4",
        "qs": "^6.11.2",
        "web3": "^1.10.0"
    },
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    }
