    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.22.9",
        "@element-plus/nuxt": "^1.0.5",
        "@nuxt/eslint-config": "^0.1.1",
        "@nuxtjs/color-mode": "^3.2.0",
        "@nuxtjs/eslint-module": "^4.1.0",
        "@nuxtjs/i18n": "^8.0.0-beta.13",
        "@nuxtjs/tailwindcss": "^6.7.2",
        "@types/node": "^18",
        "eslint": "^8.45.0",
        "nuxt": "^3.5.2",
        "nuxt-icons": "^3.2.1",
        "postcss-color-gray": "5.0.0"
    },
    "keywords": [
        "tailwindcss",
        "nuxtjs",
        "nuxt"
    ],
    "dependencies": {
        "element-plus": "^2.3.8",
        "@pinia/nuxt": "^0.4.11",
        "pinia": "^2.1.4"
    }
