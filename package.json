{
    "name": "nuxt-app",
    "private": true,
    "scripts": {
        "build": "nuxt build",
        "dev": "nuxt dev",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "lint:js": "eslint --ext \".js,.vue\" --ignore-path .npmignore .",
        "lint:style": "stylelint \"**/*.{css,scss,sass,html,vue,less}\" --ignore-path .npmignore .stylelintignore",
        "lint:prettier": "prettier --ignore-path .npmignore --check .",
        "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
